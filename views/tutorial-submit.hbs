<div class="container">
    <div class="row">
        <form action="submit-captcha?" method="get">
            <div style="border: 2px solid #5bc0de;padding: 24px 24px 20px 24px; border-radius: 6px; margin-top: 15px; margin-bottom: 15px;">
                <h3>Submit New Tutorial</h3>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control browser-default" name="username" id="username" required>
                    <small id="usernameHelp" class="form-text text-muted">This will be the name you will be called on the tutorial page.</small>
                </div>
                <div class="form-group">
                    <label for="form-title">Title</label>
                    <input type="text" class="form-control browser-default" name="title" id="form-title" required>
                    <small id="titleHelp" class="form-text text-muted">This is the title of the tutorial.</small>
                </div>
                <div class="form-group">
                    <label for="form-link">Link</label>
                    <input type="url" class="form-control browser-default" name="link" id="form-link" required>
                    <small id="linkHelp" class="form-text text-muted">This is the direct url to the tutorial.</small>
                </div>
                <div class="form-group">
                    <label for="tutorial-details">Tutorial information</label>
                    <textarea class="form-control" id="tutorial-details" name="details" rows="3" oninput="document.getElementById('tutorial-details-preview').innerHTML = new showdown.Converter().makeHtml(document.getElementById('tutorial-details').value);" required></textarea>
                    <small id="detailsHelp" class="form-text text-muted">Describe your tutorial here. You can use <a href="http://commonmark.org/help/" target="_blank">Markdown </a>here.</small>
                </div>

                <div style="border: 2px solid #5bc0de;padding: 24px 24px 20px 24px; border-radius: 6px; margin-top: 15px; margin-bottom: 15px;">
                    <label for="tutorial-details-preview">Preview</label>
                    <p id="tutorial-details-preview"></p>
                </div>
                <div class="form-group">
                    <label for="tutorial-summary">Summary</label>
                    <textarea class="form-control" id="tutorial-summary" name="summary" rows="2" required></textarea>
                    <small id="fileHelp" class="form-text text-muted">Make a quick summary of your tutorial for searches here.</small>
                </div>
                <div>
                    <label for="captcha">Captcha</label>
                    <div class="g-recaptcha" id="captcha" data-callback="recaptchaCallback" data-size="compact" data-sitekey="6Lf1RzQUAAAAAJOzGU6EdCVzYczl0QQfSMAS7nT6"></div>
                </div>
                <br />
                <button id="submitBtn" class="btn waves-effect waves-light disabled" type="submit" disabled>Submit</button>
                <small id="catpchaHelp" class="form-text text-muted">If you can't click the button make sure you did the captcha.</small>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js"></script>
<script src="/javascript/index.js"></script>

<script>
    if (getQueryString('error') === 'profanity') {
        toastr.warning('<div>Your tutorial has one or more forbbiden words. Please remove them and submit again.</div><div><a class="toastr" style="color: #000;" href="https://github.com/LDNOOBW/List-of-Dirty-Naughty-Obscene-and-Otherwise-Bad-Words/blob/master/en" target="_blank">Forbidden Words (Click)</a></div>', {closeButton: true});
    } else if (getQueryString('error')) {
        toastr.warning('Error: ' + getQueryString('error'));
    }
</script>